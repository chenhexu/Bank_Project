# BlueBank Environment Variables Template
# Copy this file to .env and fill in your actual values
# For production deployment, use these exact variable names

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=postgresql://postgres:password@localhost:5432/bluebank?sslmode=require

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Redirect URI must match what's configured in Google Cloud Console
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth-callback

# =============================================================================
# FACEBOOK OAUTH CONFIGURATION
# =============================================================================
# Get these from Facebook Developers > App Settings > Basic
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
# Redirect URI must match what's configured in Facebook App Settings
FACEBOOK_REDIRECT_URI=http://localhost:8080/oauth-callback

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Gmail SMTP settings for sending notifications
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# SendGrid API for email delivery (alternative to Gmail)
SENDGRID_API_KEY=your-sendgrid-api-key
BLUEBANK_EMAIL_FROM=noreply@bluebank.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, or production
ENVIRONMENT=development
# Debug mode: true for development, false for production
DEBUG=true

# =============================================================================
# PRODUCTION SETTINGS (for deployment)
# =============================================================================
# Uncomment and configure these for production deployment:

# For production domain
# GOOGLE_REDIRECT_URI=https://yourdomain.com/oauth-callback
# FACEBOOK_REDIRECT_URI=https://yourdomain.com/oauth-callback
# ENVIRONMENT=production
# DEBUG=false

# For AWS RDS or other cloud databases
# DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/database?sslmode=require